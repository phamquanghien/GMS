@model IEnumerable<GSM.Models.InvoiceDetail>

@{
    ViewData["Title"] = "Detail";
}

<h3>Chi tiết hoá đơn: @ViewBag.informationInvoice</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SumWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentGold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoldWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoldUnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GemstoneWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GemstoneUnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CraftingWages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntoMoney)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PercentGold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoldWeight)
            </td>
            <td>
                @string.Format("{0:0,0}", item.GoldUnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GemstoneWeight)
            </td>
            <td>
                @string.Format("{0:0,0}", item.GemstoneUnitPrice)
            </td>
            <td>
                @string.Format("{0:0,0}", item.CraftingWages)
            </td>
            <td>
                @string.Format("{0:0,0}", item.IntoMoney)
            </td>
            <td>
                <a asp-controller="InvoiceDetail" asp-action="Edit" asp-route-id="@item.InvoiceID">Sửa</a>
                <a asp-controller="InvoiceDetail" asp-action="Delete" asp-route-id="@item.InvoiceID">Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
